<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/recycler_row_entry"
    android:background="@color/white">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/unipics"
        android:scaleType="fitXY"
        android:background="@color/white"
        android:src="@drawable/uni_wits"
        android:padding="10dp"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/description_place"
        android:textSize="13sp"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:textColor="@color/black_semi_transparent"
        android:text="Best university in SA by far."
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/unipics" />
    <TextView
        android:id="@+id/name_of_place"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:maxLines="2"
        android:textColor="@color/black_semi_transparent"
        android:text="University of Witwatersrand"
        android:layout_above="@+id/description_place"
        android:layout_toEndOf="@+id/unipics" />

        />

</RelativeLayout>